<h2>Reservations</h2>

<%  @reservations.each do |reservation| %>
  <ul>
  <div class="form">
    <li>
      <!-- show reservation time, and date; seats reserved; restaurant name and location  -->
      <p class="field"> At <%= reservation.time %>, On <%= reservation.date %>  </p>
      <p class="field"> Seat <%= reservation.number_of_guests %> guests </p>
      <%= link_to reservation.restaurant.name, restaurant_path(reservation.restaurant) %>
      <p class="field"><%= reservation.restaurant.location %></p>
    </li>
  </div>
  </ul>
<% end %>

<%= link_to "Back to Restaurants", restaurants_url %>
