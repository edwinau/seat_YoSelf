<!DOCTYPE html>
<html>
  <head>
    <title>SeatYoself</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Pacifico" />
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <%=image_tag("SYheader.jpg", alt: "SYheader.jpg", class: "img_header")%>

        <div id="rest_button"> <%= link_to "Restaurants", restaurants_url %> </div>
        <div id="cuis_button"> <%= link_to "Cuisines", cuisines_url %> </div>

        <% if current_user %>
          <div id="hey_user"> <%= link_to "Hey #{current_user.name}!", user_path("current") %> </div>
          <div id="log_out"> <%= link_to "Log out", session_path("current cookie"), :method => :delete %></div>
        <% else %>
          <div id="sign_up_button"> <%= link_to "Sign Up", new_user_url %> </div>
          <div id="log_in_button"> <%= link_to "Login", new_session_path %> </div>
        <% end %>
    </header>
    <%= yield %>
  </body>
</html>
