<%= form_for(@restaurant) do |f| %>
  <% if @restaurant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@restaurant.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% @restaurant.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label :phone_number %>
    <%= f.telephone_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label :capacity %>
    <%= f.number_field :capacity %>
  </div>

  <div class="field">
    <%= f.label :first_seating %>
    <%= f.number_field :first_seating %>
  </div>

  <div class="field">
    <%= f.label :last_seating %>
    <%= f.number_field :last_seating %>
  </div>

  <div class="field">
    <%= f.label :cuisine_id %>
    <%= f.select(:cuisine_id) do %>
      <% @all_cuisines.each do |c| %>
        <%= content_tag(:option, c.cuisine_type, value: c.id) %>
      <% end %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :url_for_photo %>
    <%= f.text_field :url_for_photo %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
